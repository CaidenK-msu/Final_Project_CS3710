<h1>Upcoming Events</h1>

<!-- Display a message if no events are available -->
<% if @events.any? %>
  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= truncate(event.description, length: 50) %></td>
          <td><%= event.date.strftime("%B %d, %Y %I:%M %p") %></td>
          <td>
            <%= link_to "Show", event_path(event), class: "btn btn-info btn-sm" %>
            <%= link_to "Edit", edit_event_path(event), class: "btn btn-warning btn-sm" %>
            <%= link_to "Delete", event_path(event), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No upcoming events found. <%= link_to "Create one now!", new_event_path %></p>
<% end %>

<!-- Link to create a new event -->
<%= link_to "Create New Event", new_event_path, class: "btn btn-primary mt-3" %>

<style>
  .home-page h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .events-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .event-card {
    background-color: white;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .event-card h3 a {
    text-decoration: none;
    color: #007bff;
  }

  .event-card h3 a:hover {
    text-decoration: underline;
  }

  .event-card p {
    margin: 0.5rem 0;
  }
</style>
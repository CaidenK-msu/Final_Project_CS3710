<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<h1><%= @event.title %></h1>
<p><strong>Description:</strong> <%= @event.description %></p>
<p><strong>Date:</strong> <%= @event.date.strftime("%B %d, %Y %H:%M") %></p>

<%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary" %>
<%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "btn btn-danger" %>
<%= link_to "Back to Events", events_path, class: "btn btn-secondary" %>